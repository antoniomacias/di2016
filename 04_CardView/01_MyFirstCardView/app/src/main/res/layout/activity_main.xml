<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="es.bylogic.a01_myfirstcardview.MainActivity"
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

<android.support.v7.widget.CardView
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_image_place"
        >

        <ImageView
            android:id="@+id/image_view_place_photo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/imagen_burguer"
            android:layout_alignParentTop="true"/>


        <RelativeLayout
            android:id="@+id/relative_image_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_view_place_photo"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:background="#ffffff">


        <ImageView
            android:id="@+id/image_view_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/avatar"
            />

        <TextView
            android:id="@+id/text_view_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Milonga's Restaurante Argentino"
            android:layout_toRightOf="@+id/image_view_avatar"
            android:layout_alignTop="@+id/image_view_avatar"
            android:textColor="@android:color/black"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/text_view_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Sevilla"
            android:layout_below="@+id/text_view_place_name"
            android:layout_toRightOf="@+id/image_view_avatar"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/text_view_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/image_view_avatar"
            android:layout_below="@+id/text_view_city"
            android:text="\@miguelcampos"
            android:layout_marginBottom="8dp"
            />

        <ImageView
            android:id="@+id/image_view_rate_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_on"
            android:layout_toRightOf="@+id/image_view_avatar"
            android:layout_below="@+id/text_view_username"
            />

        <ImageView
            android:id="@+id/image_view_rate_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_on"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/image_view_rate_1"
            android:layout_below="@+id/text_view_username"
            />

        <ImageView
            android:id="@+id/image_view_rate_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_on"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/image_view_rate_2"
            android:layout_below="@+id/text_view_username"
            />

        <ImageView
            android:id="@+id/image_view_rate_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_off"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/image_view_rate_3"
            android:layout_below="@+id/text_view_username"
            />

        <ImageView
            android:id="@+id/image_view_rate_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_off"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/image_view_rate_4"
            android:layout_below="@+id/text_view_username"
            />

        <ImageView
            android:id="@+id/image_view_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chat"
            android:layout_below="@id/text_view_username"
            android:layout_alignParentRight="true"/>

    </RelativeLayout
>

    </RelativeLayout>

</android.support.v7.widget.CardView>

</RelativeLayout>
