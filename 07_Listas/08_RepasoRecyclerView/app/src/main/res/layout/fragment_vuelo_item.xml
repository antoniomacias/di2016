<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative_layout_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/image_view_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/air_europa"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

    <TextView
        android:id="@+id/text_view_hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_view_logo"
        android:layout_toRightOf="@+id/image_view_logo"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="13:35 - 15:05"/>

    <TextView
        android:id="@+id/text_view_duracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/black"
        android:layout_alignTop="@+id/image_view_logo"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="2h 30m"/>

    <TextView
        android:id="@+id/text_view_vuelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_view_logo"
        android:layout_below="@+id/text_view_hora"
        android:layout_alignBottom="@+id/image_view_logo"
        android:text="MAD - STN, Ryanair"
        android:textColor="@color/colorGray"/>

        <TextView
            android:id="@+id/text_view_escalas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_duracion"
            android:text="Directo"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorGreen"
            android:textStyle="bold"/>


        <View
            android:layout_below="@+id/image_view_logo"
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>

        <ImageView
            android:id="@+id/image_view_valoracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_smile"
            android:layout_below="@+id/separator"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/text_view_valoracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_view_valoracion"
            android:layout_below="@id/separator"
            android:layout_alignTop="@+id/image_view_valoracion"
            android:layout_alignBottom="@+id/image_view_valoracion"
            android:text="9,2"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/colorGreen"/>

        <TextView
            android:id="@+id/text_view_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/separator"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="40 €"
            android:textStyle="bold"
            android:textColor="@color/colorBlue"/>

        <TextView
            android:id="@+id/text_view_valoracion_texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_view_valoracion"
            android:textColor="@color/colorGreen"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:text="El más barato"/>

        <TextView
            android:id="@+id/text_view_airline_travel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_precio"
            android:layout_alignParentRight="true"
            android:text="a través de Ryanair"
            android:textColor="@color/colorGray"
            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
